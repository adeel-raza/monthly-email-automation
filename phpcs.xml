<?xml version="1.0"?>
<ruleset name="Email Scheduler">
	<description>WordPress Coding Standards for Email Scheduler plugin</description>
	
	<!-- Exclude text domain mismatch warnings - text domain 'email-scheduler' is correct for wp.org submission -->
	<rule ref="WordPress.WP.I18n.TextDomainMismatch">
		<severity>0</severity>
	</rule>
	
	<!-- Include WordPress Coding Standards -->
	<config name="minimum_supported_wp_version" value="6.0"/>
	
	<!-- Exclude vendor and node_modules -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>

